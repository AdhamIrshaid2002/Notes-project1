<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/project.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #1e1e2f; 
            color: #f0f0f0; 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        h2 {
            margin-top: 20px;
            margin-bottom: 20px;
            color: #ffffff;
            text-align: center;
        }

        .container {
            margin-top: 50px;
            max-width: 500px;
            background-color: #2c2c3c; 
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.6);
        }

        .form-control {
            background-color: #3a3a4a;
            color: #f0f0f0;
            border: 1px solid #555;
        }

            .form-control:focus {
                border-color: #00bfff;
                box-shadow: 0 0 5px #00bfff;
            }

        .btn-primary {
            background-color: #00bfff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #009acd;
            }

        .btn-success {
            background-color: #28a745;
            border: none;
        }

            .btn-success:hover {
                background-color: #1e7e34;
            }

        .btn-warning {
            background-color: #ffc107;
            color: #1e1e2f;
        }

            .btn-warning:hover {
                background-color: #e0a800;
            }

        .btn-danger {
            background-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #b02a37;
            }

        .table {
            background-color: #2c2c3c;
            color: #f0f0f0;
            border-radius: 8px;
        }

            .table th {
                background-color: #3a3a4a;
                color: #00bfff;
            }

            .table td {
                vertical-align: middle;
            }

        a {
            color: #00bfff;
        }

            a:hover {
                color: #009acd;
                text-decoration: none;
            }

        .error {
            color: #ff4c4c;
            margin-top: 10px;
            text-align: center;
        }
        .logout-btn {
            color: #f44336;
            text-decoration: none;
            margin-left: 15px;
        }

        .search-box {
            margin-bottom: 20px;
        }

            .search-box input {
                padding: 8px;
                border-radius: 6px;
                border: none;
                width: 220px;
            }

            .search-box button {
                padding: 8px 12px;
                border-radius: 6px;
                border: none;
                background: #1e88e5;
                color: white;
            }


    </style>


</head>
<body>
    <header>
        

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">project</a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Notes" asp-action="Index">Home</a>
                            
                        </li>
                        <li class="nav-item">
                           
                            <a href="/Auth/Logout" class="logout-btn">Logout</a>
                        </li>
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
